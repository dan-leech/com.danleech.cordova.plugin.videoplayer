<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/vp_btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/ip_padding_medium"
        android:drawableStart="@drawable/ip_ic_check"
        android:drawablePadding="@dimen/ip_padding_icon"
        android:paddingStart="@dimen/ip_padding_medium"
        android:paddingEnd="@dimen/ip_padding_medium"
        android:text="@string/ip_done"
        android:textSize="@dimen/ip_font_medium"
        android:textAllCaps="false"
        android:textColor="@color/ip_white"
        app:backgroundTint="@color/ip_positive"/>

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/player_view"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>